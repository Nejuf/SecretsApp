<form action="<%= secrets_url %>" method="POST" >
	<label for="secret_title">Title</label>
	<input type="hidden"
				 name="authenticity_token"
				 value="<%= form_authenticity_token %>" >

	<input type="text" name="secret[title]" id="secret_title">
	<input type="hidden" name="secret[recipient_id]" value="<%= params[:user_id] %>">
	<br>
	<input type="submit" value="Create Secret">
</form>

