<form action="<%= secrets_url %>" method="POST" class="secret_form" >
	<label for="secret_title">Title</label>
	<input type="hidden"
				 name="authenticity_token"
				 value="<%= form_authenticity_token %>" >

	<input type="text" name="secret[title]" id="secret_title">
	<input type="hidden" name="secret[recipient_id]" value="<%= user_id  %>">

	<div id="tag_selections">
		<select >
			<% Tag.all.each do |tag| %>
				<option name="secret[tag_ids][]" value="<%= tag.id %>"><%= tag.name %></option>
			<% end %>
		</select>
	</div>
	<div id="add_tag">
		<%= link_to "Add another tag" %>
	</div>
	<br>
	<input type="submit" id="secret_form_button" value="Create Secret">
</form>

